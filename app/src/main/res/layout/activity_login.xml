<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:drawableLeft="@drawable/login_icon"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:lineSpacingExtra="-0.5sp"
            android:text="范团商家版"
            android:textColor="#323233"
            android:textSize="22sp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_login_edit">

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                android:gravity="center|left"
                android:hint="手机号"
                android:padding="10dp"
                android:textColor="#323233"
                android:textColorHint="#919295"
                android:textSize="16sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_login_edit">

            <EditText
                android:id="@+id/et_psw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                android:gravity="center|left"
                android:hint="密码"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#323233"
                android:textColorHint="#919295"
                android:textSize="16sp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/login_tips"
            android:drawablePadding="5dp"
            android:lineSpacingExtra="0sp"
            android:paddingLeft="3dp"
            android:text="如忘记密码，请联系业务经理"
            android:textColor="#7d7e80"
            android:textSize="12sp"
            />


        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_login_btn"
            android:gravity="center"
            android:lineSpacingExtra="0sp"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="17sp"
            />
    </LinearLayout>
</RelativeLayout>
